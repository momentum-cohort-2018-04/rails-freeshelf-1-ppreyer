<div class='row'>
  <div class='col-sm-6 col-sm-offset-3'>
    <%= form_tag login_url do %>

      <div class='form-group'>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>

      <div class='form-group'>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div>
        <button type="submit">Log In</button>
      </div>
  <% end %>
  </div>
</div>