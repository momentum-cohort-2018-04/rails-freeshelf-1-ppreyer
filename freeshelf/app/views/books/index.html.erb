<h1>Hello World</h1>

<% @books.each do |book| %>
  <p><%= book.title %></p>
  <p><%= book.author %></p>
  <p><%= book.description %></p>
  <p><%= book.url %></p>
  <%= link_to 'Edit', edit_book_path(book) %>
  <%= link_to 'Delete', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<% end %>